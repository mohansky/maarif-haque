---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<div class="card bg-base-100 w-96">
  <figure class="border border-cyan-400 rounded-3xl">
    {
      project.data.image && (
        <Image
          src={project.data.image}
          alt={project.data.title}
          width={360}
          height={240}
          class="w-full aspect-video object-cover"
        />
      )
    }
  </figure>
  <div class="card-body">
     <a href={`/${project.id}`}> 
      <h2 class="card-title">
        {project.data.title}
        <!-- <div class="badge badge-secondary">NEW</div> -->
      </h2>
    </a>
    <p>{project.data.description}</p>
    <div class="card-actions items-center mt-5">
      {project.data.tags.map((tag, index) => (
        <>
          <div class="text-xs opacity-70 uppercase">{tag}</div>
          {index < project.data.tags.length - 1 && <div class="bg-base-content/70 w-1 h-1 rounded-full"/>}
        </>
      ))}
    </div>
  </div>
</div>
